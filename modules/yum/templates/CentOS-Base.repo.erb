[base]
name=CentOS-$releasever - Base
baseurl=<%=@baseurl -%>/centos/<%=@version -%>/os/$basearch/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-6

#released updates
[updates]
name=CentOS-$releasever - Updates
baseurl=<%=@baseurl -%>/centos/<%=@version -%>/updates/$basearch/
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-6